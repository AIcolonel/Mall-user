<div class="model-box clearfix model-off">
	<div class="model">
		<div class="model-container">
			<div class="model-header clearfix">
				<div class="header-text">新增地址</div>
				<div class="model-off">
					<i class="fa fa-times"></i>
				</div>
			</div>
			<div class="model-body">
				<div class="form">
					<div class="login-form">
						<div class="err">
							<i class="fa fa-exclamation-circle"></i>
							<span class="err-msg"></span>
						</div>
						<div class="login-user">
							<label class="form-item">
								<i class="fa fa-user"></i>
							</label>
							<input type="text" name="username" class="input-user" placeholder="请输入收货人姓名">
						</div>
						<div class="login-password">
							<label class="form-item">
								<i class="fa fa-university"></i>
							</label>
							<select name="province" class="province-select">
								<option>请选择</option>
							</select>
							<select name="city" class="city-select">
								<option>请选择</option>
							</select>
						</div>
						<div class="login-repassword">
							<label class="form-item">
								<i class="fa fa-map-marker"></i>
							</label>
							<input type="text" name="address" class="input-repassword" placeholder="请输入详细地址">
						</div>
						<div class="login-phone">
							<label class="form-item">
								<i class="fa fa-mobile"></i>
							</label>
							<input type="text" name="userphone" class="input-phone" placeholder="请输入手机号">
						</div>
						<div class="login-email">
							<label class="form-item">
								<i class="fa fa-envelope-square"></i>
							</label>
							<input type="text" name="zip" class="input-email" placeholder="请输入邮编,如00000">
						</div>
						<div class="btn btn-submit" id="btn-add">
							确认
						</div>
					</div>
				</div>
			</div>
			<div class="model-footer">
				
			</div>
		</div>
	</div>
</div>